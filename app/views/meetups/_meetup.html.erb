<section id="meetup">
  <h1 class="tag">
    <span class="tagleft"></span>
    <span class="text">
      <span>Next Meet-Up</span>
    </span>
    <span class="tagright"></span>
  </h1>
  <div id="map">
    <div id="company">
      <h2><%= @meetup.name %></h2>
      <div class="date-loc">
        <p class="date"><%= @meetup.time.to_formatted_s(:long) %></p>
        <p class="loc"><%= @meetup.venue.name %> (<%= @meetup.venue.address_1 %>)</p>
      </div>
      <div class="content">
        <%= @meetup.description.html_safe %>
      </div>
      <a class="button" href="http://www.meetup.com/Amsterdam-rb/events/<%= @meetup.id %>/">Sign up at Meetup</a>
    </div>
    <div class="mapbox"><a href="http://maps.google.nl/maps?q=80beans,<%= @meetup.venue.address_1 %>,<%= @meetup.venue.city %>&amp;hl=nl&amp;sll=<%= @meetup.venue.lat %>,<%= @meetup.venue.lon %>&amp;sspn=3.87879,3.779297&amp;hq=80beans,&amp;hnear=Vijzelstraat+72,+Amsterdam,+Noord-Holland&amp;t=m&amp;z=17"><img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @meetup.venue.lat %>,<%= @meetup.venue.lon %>&amp;zoom=14&amp;size=940x505&amp;sensor=false&amp;markers=color:blue|<%= @meetup.venue.address_1 %>, <%= @meetup.venue.city %>" alt="map" /></a></div>
  </div>
</section>