<h1>Listing meetups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Address</th>
      <th>Host</th>
      <th>Description</th>
      <th>Meetup url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetups.each do |meetup| %>
      <tr>
        <td><%= meetup.title %></td>
        <td><%= meetup.date %></td>
        <td><%= meetup.address %></td>
        <td><%= meetup.host_id %></td>
        <td><%= meetup.description %></td>
        <td><%= meetup.meetup_url %></td>
        <td><%= link_to 'Show', meetup %></td>
        <td><%= link_to 'Edit', edit_meetup_path(meetup) %></td>
        <td><%= link_to 'Destroy', meetup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meetup', new_meetup_path %>

<br>
<br>


<% unless user_signed_in? %>
<strong>Authentication:</strong>
<ul>
  <li><%= link_to 'Sign in', new_user_session_path %></li>
  <li><%= link_to 'Sign up', new_user_registration_path %></li>
</ul>
<% else %>
You are signed in as <%= link_to current_user.email, 'mailto:current_user.email' %>
<br>
<%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %>
<% end %>
